pipeline {
    agent any
	tools {
		echo 'mvn_home'
	}
    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-credentials', url: 'https://github.com/taakshakti/assessment-ca-test.git'
            }
        }
		stage('Maven-clean') {
            steps {
                echo 'mvn clean'
            }
        }
        stage('Maven-build') {
            steps {
                echo 'mvn compile'
            }
        }
        stage('Maven-deploy') {
            steps {
                echo 'mvn package'
            }
        }
    }
}
